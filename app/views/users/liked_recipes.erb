<% if logged_in? %>

<h3>Liked Recipes:</h3>

<%@recipes.each do |recipe| %>
  <a href="/recipes/<%=recipe.id%>">
  <h4><%=recipe.name.capitalize%> 
  <%if recipe.cuisine %> - <%=recipe.cuisine.name.capitalize%><%end%>
  <%if recipe.user %> - <%=recipe.user.username%> <%end%>
  </h4></a>
<%end%>



<% else %>
<h3>Please <a href="/login">Log In</a> to view this page</h3>
<%end%>

