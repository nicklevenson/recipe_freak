<% if logged_in? %>
<h1>Hello <%=current_user.username%>!</h1>

<h3>My Recipes:</h3>

<%@recipes.each do |recipe| %>
  <a href="/recipes/<%=recipe.id%>">
  <h4><%=recipe.name%> 
  <%if recipe.cuisine %> - <%=recipe.cuisine.name%><%end%>
  <%if recipe.user %> - <%=recipe.user.username%> <%end%>
  </h4></a>
<%end%>



<% else %>
<h3>Please <a href="/login">Log In</a> to view this page</h3>
<%end%>
